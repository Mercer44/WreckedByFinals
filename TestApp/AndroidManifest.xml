<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.latenight.testapp"
    android:versionCode="1"
    android:versionName="1.0" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.latenight.testapp.FingerBangerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.latenight.testapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.latenight.testapp.PickFriendsActivity"
            android:label="Pick Friends" >
        </activity>
        <activity
            android:name="com.latenight.testapp.StartWarActivity"
            android:label="@string/title_activity_start_war" >
        </activity>
        <activity
            android:name="com.latenight.testapp.CurrentWarActivity"
            android:label="@string/title_activity_current_war" >
        </activity>
    </application>

</manifest>
